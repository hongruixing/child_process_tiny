{
  "compilerOptions": {
    "target": "ES2015",
    "types": [
      "node"
    ],
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "lib"
  },
  "include": [
    "ts/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
